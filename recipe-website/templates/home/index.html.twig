{% extends 'base.html.twig' %}

{% block title %}
	{{ 'All recipes' | trans }}
{% endblock %}

{% block body %}
	<div id="flash"></div>

	<table class="table">
		<thead>
			<tr>
				<th>{{ knp_pagination_sortable(recipes, 'Titre', 'r.title') }}</th>
				<th>{{ knp_pagination_sortable(recipes, 'Cat√©gorie', 'c.name') }}</th>
			</tr>
		</thead>
		<tbody>
			{% for recipe in recipes %}
				<tr id=row_recipe_{{ recipe.id }}>
					<td>
						{{ recipe.title }}
					</td>
					<td>
						{{ recipe.category.name | default('')}}
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	{{ knp_pagination_render(recipes) }}
{% endblock %}
